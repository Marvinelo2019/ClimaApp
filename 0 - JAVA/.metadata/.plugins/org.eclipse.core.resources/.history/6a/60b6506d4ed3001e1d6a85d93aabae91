package org.marvinlopez.bean;

import org.marvinlopez.servicio.CentralTelefonica;

public class LlamadaInterior extends Llamada implements CentralTelefonica {
	 private int franjaHoraria;
	    private static final double[] COSTOS_POR_FRANJA = {0.20, 0.35, 0.85};

	    public LlamadaInterior(String numeroOrigen, String numeroDestino, int duracionSegundos, int franjaHoraria) {
	        super();
	        this.franjaHoraria = franjaHoraria;
	        calcularCosto();
	    }

	    private void calcularCosto() {
	        double costoPorSegundo = COSTOS_POR_FRANJA[franjaHoraria - 1];
	        costoTotal = costoPorSegundo * duracionSegundos;
	    }

		@Override
		public void registrarLlamada() {
			// TODO Auto-generated method stub
			
		}
}
